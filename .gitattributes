# Normalize all text files to LF in repo
* text=auto eol=lf

# Binary files (no EOL normalization)
*.png -text
*.jpg -text
*.jpeg -text
*.gif -text
*.ico -text
*.webp -text
*.pdf -text

# Fonts and archives as binary
*.woff -text
*.woff2 -text
*.ttf -text
*.eot -text
*.zip -text

# SVG as text with LF
*.svg text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=lf

# Configs and code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf
